{#
/**
 * @file
 * Theme override to display a region.
 *
 * Available variables:
 * - content: The content for this region, typically blocks.
 * - attributes: HTML attributes for the region <div>.
 * - region: The name of the region variable as defined in the theme's
 *   .info.yml file.
 *
 * @see template_preprocess_region()
 */
#}
{%
  set classes = [
    'region',
    'region-' ~ region|clean_class,
  ]
%}
{% if content %}
  <div{{ attributes.addClass(classes) }}>
    <div class="footer__top">
    <div class="footer__lhs">
      <p class="footer__head">{{ site_name }}</p>
      <p class="footer__subtext">{{ site_slogan }}</p>
    </div>
    <div class="footer__rhs">
      {{drupal_entity('block', 'gtranslate_2')}}
    </div>
    </div>

    {{ content }}

    <div class="footer__bot">
      {% if facebook or 
            instagram or
            twitter or 
            youtube 
      %}
        {{drupal_entity('block', 'socialmedialinksblock_2')}}
      {% endif %}

      <div class="footer__open-adocate"><span>Powered by</span><img src="/{{ base_path ~ directory }}/images/logo-color-footer.png" alt="Open Adocate logo" height="17" width="120" /></div>

      <div class="footer__copyright"><span>Â© {{ 'now' | date('Y') }} {{ site_name }}. All rights reserved</span></div>
    </div>
  </div>
{% endif %}

