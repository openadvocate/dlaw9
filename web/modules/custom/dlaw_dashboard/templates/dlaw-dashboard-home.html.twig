      <a href="/node/add/page" class="btn btn-primary btn-lg add_page"><i class="fa fa-file-text"></i> Add Page</a>
      <a href="/node/add/contact" class="btn btn-success btn-lg add_contact"><i class="fa fa-user"></i> Add Contact</a>
    </div>

