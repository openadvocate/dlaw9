    <div class="panel">
      {{ drupal_block('dlaw_dashboard_site_summary') }}
    </div>

  </div>

  <div class="layout-column layout-column--half">
    <div class="panel">
      {{ drupal_block('dlaw_dashboard_popular_pages') }}
